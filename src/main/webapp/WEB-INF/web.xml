<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
    	<welcome-file>/user/index.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/bookings</param-value>
    </context-param>
 
    <context-param>
        <param-name>name</param-name>
        <param-value>root</param-value>
    </context-param>
 
    <context-param>
        <param-name>pass</param-name>
        <param-value>misq1.r007</param-value>
    </context-param>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.bookings.mvc.controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
         <servlet-class>com.bookings.mvc.controller.UserController</servlet-class> 
    </servlet>
    <servlet>
        <servlet-name>HotelController</servlet-name>
         <servlet-class>com.bookings.mvc.controller.HotelController</servlet-class> 
    </servlet>
    <servlet>
        <servlet-name>RoomTypeController</servlet-name>
         <servlet-class>com.bookings.mvc.controller.RoomTypeController</servlet-class> 
    </servlet>
    <servlet>
        <servlet-name>RoomController</servlet-name>
         <servlet-class>com.bookings.mvc.controller.RoomController</servlet-class> 
    </servlet>
    <servlet>
        <servlet-name>PriceController</servlet-name>
         <servlet-class>com.bookings.mvc.controller.PriceController</servlet-class> 
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/office/welcome</url-pattern>
        <url-pattern>/office/login</url-pattern>
        <url-pattern>/office/welcome/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HotelController</servlet-name>
        <url-pattern>/office/hotelsettings/</url-pattern>
        <url-pattern>/office/hotelsettings/new-hotel</url-pattern>
        <url-pattern>/office/hotelsettings/insert-hotel</url-pattern>
        <url-pattern>/office/hotelsettings/delete-hotel</url-pattern>
        <url-pattern>/office/hotelsettings/edit-hotel</url-pattern>
        <url-pattern>/office/hotelsettings/update-hotel</url-pattern>
        <url-pattern>/office/hotelsettings/list-hotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomTypeController</servlet-name>
        <url-pattern>/office/roomtypes/</url-pattern>
        <url-pattern>/office/roomtypes/new</url-pattern>
        <url-pattern>/office/roomtypes/list</url-pattern>
        <url-pattern>/office/roomtypes/insert</url-pattern>
        <url-pattern>/office/roomtypes/delete</url-pattern>
        <url-pattern>/office/roomtypes/edit</url-pattern>
        <url-pattern>/office/roomtypes/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomController</servlet-name>
        <url-pattern>/office/rooms/</url-pattern>
        <url-pattern>/office/rooms/new</url-pattern>
        <url-pattern>/office/rooms/list</url-pattern>
        <url-pattern>/office/rooms/insert</url-pattern>
        <url-pattern>/office/rooms/delete</url-pattern>
        <url-pattern>/office/rooms/edit</url-pattern>
        <url-pattern>/office/rooms/update</url-pattern>
        <url-pattern>/office/calendar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PriceController</servlet-name>
        <url-pattern>/office/roomtypes/prices/</url-pattern>
        <url-pattern>/office/roomtypes/newprice</url-pattern>
        <url-pattern>/office/roomtypes/list-prices</url-pattern>
        <url-pattern>/office/roomtypes/insert-price</url-pattern>
        <url-pattern>/office/roomtypes/delete-price</url-pattern>
        <url-pattern>/office/roomtypes/edit-price</url-pattern>
        <url-pattern>/office/roomtypes/update-price</url-pattern>
        <url-pattern>/office/roomtypes/view-prices</url-pattern>
    </servlet-mapping> 
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
